<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlador.PanelReservaUserControlador">

    <!-- TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="16"
              style="-fx-background-color: #0b0b0b; -fx-border-color: #3b3320; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets bottom="12" left="20" right="20" top="12"/>
            </padding>

            <ImageView fitHeight="36" fitWidth="36" preserveRatio="true">
                <image>
                    <Image url="@logo.jpg"/>
                </image>
            </ImageView>

            <Label text="Selecciona tus fechas"
                   style="-fx-text-fill: #ffd666; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <StackPane HBox.hgrow="ALWAYS"/>

            <MenuButton fx:id="menuUsuario" text="Usuario"
                        style="-fx-background-radius: 20;
                               -fx-background-color: transparent;
                               -fx-border-radius: 20;
                               -fx-border-color: #ffd666;
                               -fx-border-width: 1.2;
                               -fx-text-fill: #ffd666;
                               -fx-font-size: 12px;
                               -fx-padding: 6 14 6 14;">
                <items>
                    <MenuItem fx:id="itemConfig" text="Config"/>
                    <MenuItem fx:id="itemMisReservas" text="Mis Reservas"/>
                    <MenuItem fx:id="itemLogout" text="Logout"/>
                </items>
            </MenuButton>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <StackPane>
            <padding>
                <Insets top="22" right="22" bottom="22" left="22"/>
            </padding>

            <VBox maxWidth="820" spacing="18"
                  style="-fx-background-color: #0b0b0b; -fx-background-radius: 18;
                         -fx-border-color: #3b3320; -fx-border-width: 1.2; -fx-border-radius: 18;">
                <padding>
                    <Insets top="18" right="18" bottom="18" left="18"/>
                </padding>

                <Label text="Precio rebajado a partir de 7 y 30 días de alquiler"
                       style="-fx-text-fill: #ffd666; -fx-font-size: 12px; -fx-font-weight: bold;"/>

                <HBox spacing="14">
                    <DatePicker fx:id="desdePicker" promptText="Fecha de inicio"
                                style="-fx-background-radius: 14; -fx-font-size: 13px; -fx-padding: 8 12 8 12;
                                       -fx-border-color: #3b3320; -fx-border-width: 1.2; -fx-border-radius: 14;"/>

                    <DatePicker fx:id="hastaPicker" promptText="Fecha de fin"
                                style="-fx-background-radius: 14; -fx-font-size: 13px; -fx-padding: 8 12 8 12;
                                       -fx-border-color: #3b3320; -fx-border-width: 1.2; -fx-border-radius: 14;"/>
                </HBox>

                <HBox spacing="18">
                    <Label text="Días seleccionados:" style="-fx-text-fill: #b5b5b5; -fx-font-size: 13px;"/>
                    <Label fx:id="lblDiasSeleccionados" text="0"
                           style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px; -fx-font-weight: bold;"/>

                    <StackPane HBox.hgrow="ALWAYS"/>

                    <Label text="Precio estimado:" style="-fx-text-fill: #b5b5b5; -fx-font-size: 13px;"/>
                    <Label fx:id="lblPrecioEstimado" text="0€"
                           style="-fx-text-fill: #ffd666; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                </HBox>

                <HBox alignment="CENTER" spacing="12">
                    <Button fx:id="btnConfirmar" text="Confirmar fechas"
                            style="-fx-background-radius: 20; -fx-background-color: #ffd666; -fx-text-fill: #111111;
                                   -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 22 10 22;"/>

                    <Button fx:id="btnCancelar" text="Cancelar"
                            style="-fx-background-radius: 20; -fx-background-color: transparent;
                                   -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                   -fx-text-fill: #f5f5f5; -fx-font-size: 14px;
                                   -fx-padding: 10 22 10 22;"/>
                </HBox>

            </VBox>
        </StackPane>
    </center>

</BorderPane>
