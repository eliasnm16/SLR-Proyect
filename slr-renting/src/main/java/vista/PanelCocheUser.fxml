<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlador.PanelCocheUserControlador">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="18"
              style="-fx-background-color: #050608; -fx-border-color: #3b3320; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="14" bottom="14" left="24" right="24"/>
            </padding>

            <ImageView fitHeight="42" fitWidth="42" preserveRatio="true">
                <image>
                    <Image url="@logo.jpg"/>
                </image>
            </ImageView>

            <StackPane HBox.hgrow="ALWAYS" alignment="CENTER">
                <Label text="Seville Luxury Renting"
                       style="-fx-text-fill: #ffd666; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            </StackPane>

            <VBox spacing="6" alignment="CENTER_RIGHT">
                <Label text="Menú"
                       style="-fx-text-fill: #b5b5b5; -fx-font-size: 10px;"/>
                <MenuButton fx:id="menuUsuario" text="Usuario ▾"
                            style="-fx-background-radius: 18;
                                   -fx-background-color: rgba(255,214,102,0.08);
                                   -fx-border-radius: 18;
                                   -fx-border-color: #ffd666;
                                   -fx-border-width: 1.5;
                                   -fx-text-fill: #ffd666;
                                   -fx-font-size: 13px;
                                   -fx-font-weight: bold;
                                   -fx-padding: 8 18 8 18;">
                    <items>
                        <MenuItem fx:id="itemConfig" text="Config"/>
					    <MenuItem fx:id="itemMisReservas" text="Mis Reservas"/>
					    <MenuItem fx:id="itemLogout" text="Logout"/>
                    </items>
                </MenuButton>
            </VBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                    style="-fx-background-color: transparent;"
                    vbarPolicy="AS_NEEDED">
            <content>

                <StackPane style="-fx-background-color: black;">
                    <padding>
                        <Insets top="24" right="24" bottom="32" left="24"/>
                    </padding>

                    <VBox spacing="22" maxWidth="1180">

                        <Label text="Detalles del Coche"
                               style="-fx-text-fill: #ffd666; -fx-font-size: 22px; -fx-font-weight: bold;"/>

                        <HBox spacing="24" style="-fx-background-color: transparent;">

                            <!-- Imagen -->
                            <StackPane prefHeight="360" prefWidth="520"
                                       style="-fx-background-color: #050608; -fx-background-radius: 18;
                                              -fx-border-radius: 18; -fx-border-color: #3b3320; -fx-border-width: 1.2;">
                                <ImageView fx:id="imgCoche"
                                           fitHeight="360" fitWidth="520"
                                           preserveRatio="true"
                                           smooth="true"/>
                            </StackPane>

                            <!-- Info -->
                            <VBox prefWidth="640" spacing="14">

                                <Label fx:id="lblMarcaYModelo" text="Marca · Modelo"
                                       style="-fx-text-fill: #f5f5f5; -fx-font-size: 26px; -fx-font-weight: bold;"/>

                                <Label fx:id="lblDescripcion" text="Descripción del coche"
                                       wrapText="true"
                                       style="-fx-text-fill: #b5b5b5; -fx-font-size: 13px;"/>

                                <GridPane hgap="18" vgap="18">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="60"/>
                                        <RowConstraints minHeight="60"/>
                                    </rowConstraints>

                                    <StackPane style="-fx-background-color: #050608; -fx-background-radius: 16;
                                                     -fx-border-radius: 16; -fx-border-color: #3b3320; -fx-border-width: 1.2;">
                                        <padding><Insets top="12" right="16" bottom="12" left="16"/></padding>
                                        <VBox spacing="6">
                                            <Label text="Potencia" style="-fx-text-fill: #b5b5b5; -fx-font-size: 11px;"/>
                                            <Label fx:id="lblPotencia" text="000 CV"
                                                   style="-fx-text-fill: #f5f5f5; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                                        </VBox>
                                    </StackPane>

                                    <StackPane GridPane.columnIndex="1"
                                               style="-fx-background-color: #050608; -fx-background-radius: 16;
                                                      -fx-border-radius: 16; -fx-border-color: #3b3320; -fx-border-width: 1.2;">
                                        <padding><Insets top="12" right="16" bottom="12" left="16"/></padding>
                                        <VBox spacing="6">
                                            <Label text="Motor" style="-fx-text-fill: #b5b5b5; -fx-font-size: 11px;"/>
                                            <Label fx:id="lblMotor" text="Desconocido"
                                                   style="-fx-text-fill: #f5f5f5; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                                        </VBox>
                                    </StackPane>

                                    <StackPane GridPane.rowIndex="1"
                                               style="-fx-background-color: #050608; -fx-background-radius: 16;
                                                      -fx-border-radius: 16; -fx-border-color: #3b3320; -fx-border-width: 1.2;">
                                        <padding><Insets top="12" right="16" bottom="12" left="16"/></padding>
                                        <VBox spacing="6">
                                            <Label text="Velocidad Máx" style="-fx-text-fill: #b5b5b5; -fx-font-size: 11px;"/>
                                            <Label fx:id="lblVelocidad" text="000 km/h"
                                                   style="-fx-text-fill: #f5f5f5; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                                        </VBox>
                                    </StackPane>

                                    <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1"
                                               style="-fx-background-color: #050608; -fx-background-radius: 16;
                                                      -fx-border-radius: 16; -fx-border-color: #3b3320; -fx-border-width: 1.2;">
                                        <padding><Insets top="12" right="16" bottom="12" left="16"/></padding>
                                        <VBox spacing="6">
                                            <Label text="Plazas" style="-fx-text-fill: #b5b5b5; -fx-font-size: 11px;"/>
                                            <Label fx:id="lblPlazas" text="0"
                                                   style="-fx-text-fill: #f5f5f5; -fx-font-size: 16px; -fx-font-weight: bold;"/>

                                            <Label text="Matrícula" style="-fx-text-fill: #b5b5b5; -fx-font-size: 11px;"/>
                                            <Label fx:id="lblMatricula" text="---"
                                                   style="-fx-text-fill: #f5f5f5; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                                        </VBox>
                                    </StackPane>

                                </GridPane>

                                <HBox alignment="CENTER_LEFT" spacing="18">
                                    <VBox spacing="4">
                                        <Label text="Precio" style="-fx-text-fill: #b5b5b5; -fx-font-size: 11px;"/>
                                        <Label fx:id="lblPrecio" text="0€/día"
                                               style="-fx-text-fill: #ffd666; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                                    </VBox>

                                    <Region HBox.hgrow="ALWAYS"/>

                                    <CheckBox fx:id="chkChofer" text="Contratar chófer privado"
                                              style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px;"/>
                                </HBox>

                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER" style="-fx-padding: 6 0 0 0;">
                            <Button fx:id="btnSeleccionarDias" text="Seleccionar días para el alquiler"
                                    style="-fx-background-radius: 20; -fx-background-color: #ffd666;
                                           -fx-text-fill: #111111; -fx-font-size: 14px; -fx-font-weight: bold;
                                           -fx-padding: 10 26 10 26;"/>
                        </HBox>

                    </VBox>
                </StackPane>

            </content>
        </ScrollPane>
    </center>

</BorderPane>
