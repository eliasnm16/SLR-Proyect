<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="607.0" prefWidth="620.0"
            style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlador.LoginRegistroControlador">

    <center>
        <StackPane>
            <padding>
                <Insets top="20" right="28" bottom="20" left="28"/>
            </padding>

            <VBox maxWidth="520" spacing="12"
                  style="-fx-background-color: #0b0b0b; -fx-background-radius: 18;
                         -fx-border-color: #3b3320; -fx-border-width: 1.2; -fx-border-radius: 18;">
                <padding>
                    <Insets top="20" right="22" bottom="20" left="22"/>
                </padding>

                <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                    <image>
                        <Image url="@logo.jpg"/>
                    </image>
                </ImageView>

                <Text fill="WHITE" text="Registro">
                    <font>
                        <Font size="20"/>
                    </font>
                </Text>

                <Text fill="#b5b5b5" text="Introduce tus datos para crear la cuenta" style="-fx-font-size: 12px;"/>

                <GridPane hgap="10" vgap="2">
                    <!-- Nombre -->
                    <Text fill="WHITE" text="Nombre completo" GridPane.rowIndex="0" GridPane.columnIndex="0"
                          style="-fx-font-size: 13px;"/>
                    <TextField fx:id="txtNombre" promptText="Nombre y apellidos"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"
                               style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5; -fx-font-size: 13px;
                                      -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                      -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12 8 12;"/>
                    <Label fx:id="lblErrorNombre" textFill="#ff6666" GridPane.rowIndex="2" GridPane.columnIndex="0"
                           visible="false" style="-fx-font-size: 10px; -fx-padding: 1 0 3 5;" prefHeight="15"/>

                    <!-- Correo -->
                    <Text fill="WHITE" text="Email" GridPane.rowIndex="3" GridPane.columnIndex="0"
                          style="-fx-font-size: 13px;"/>
                    <TextField fx:id="txtCorreo" promptText="correo@ejemplo.com"
                               GridPane.rowIndex="4" GridPane.columnIndex="0"
                               style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5; -fx-font-size: 13px;
                                      -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                      -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12 8 12;"/>
                    <Label fx:id="lblErrorCorreo" textFill="#ff6666" GridPane.rowIndex="5" GridPane.columnIndex="0"
                           visible="false" style="-fx-font-size: 10px; -fx-padding: 1 0 3 5;" prefHeight="15"/>

                    <!-- NIF/NIE -->
                    <Text fill="WHITE" text="NIF/NIE" GridPane.rowIndex="6" GridPane.columnIndex="0"
                          style="-fx-font-size: 13px;"/>
                    <TextField fx:id="txtNif" promptText="00000000X"
                               GridPane.rowIndex="7" GridPane.columnIndex="0"
                               style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5; -fx-font-size: 13px;
                                      -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                      -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12 8 12;"/>
                    <Label fx:id="lblErrorNif" textFill="#ff6666" GridPane.rowIndex="8" GridPane.columnIndex="0"
                           visible="false" style="-fx-font-size: 10px; -fx-padding: 1 0 3 5;" prefHeight="15"/>

                    <!-- Teléfono -->
                    <Text fill="WHITE" text="Teléfono" GridPane.rowIndex="9" GridPane.columnIndex="0"
                          style="-fx-font-size: 13px;"/>
                    <TextField fx:id="txtTelefono" promptText="+34..."
                               GridPane.rowIndex="10" GridPane.columnIndex="0"
                               style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5; -fx-font-size: 13px;
                                      -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                      -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12 8 12;"/>
                    <Label fx:id="lblErrorTelefono" textFill="#ff6666" GridPane.rowIndex="11" GridPane.columnIndex="0"
                           visible="false" style="-fx-font-size: 10px; -fx-padding: 1 0 3 5;" prefHeight="15"/>

                    <!-- Contraseña -->
                    <Text fill="WHITE" text="Contraseña" GridPane.rowIndex="12" GridPane.columnIndex="0"
                          style="-fx-font-size: 13px;"/>
                    <PasswordField fx:id="txtPassword" promptText="••••••••"
                                   GridPane.rowIndex="13" GridPane.columnIndex="0"
                                   style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5; -fx-font-size: 13px;
                                          -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                          -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12 8 12;"/>
                    <Label fx:id="lblErrorPassword" textFill="#ff6666" GridPane.rowIndex="14" GridPane.columnIndex="0"
                           visible="false" style="-fx-font-size: 10px; -fx-padding: 1 0 3 5;" prefHeight="15"/>
                </GridPane>

                <CheckBox fx:id="chkCarnet" text="Dispone de carnet de conducir" textFill="WHITE"
                          style="-fx-text-fill: #f5f5f5; -fx-font-size: 13px;"/>

                <Button fx:id="btnRegistro" mnemonicParsing="false" onAction="#onAcceder" text="Registrarse"
                        style="-fx-background-color: #ffd666; -fx-text-fill: #111111; -fx-font-weight: bold;
                               -fx-background-radius: 14; -fx-padding: 10 18 10 18; -fx-font-size: 14px;"/>

                <Button fx:id="btnVolverLogin" mnemonicParsing="false" onAction="#irALogin"
                        text="¿Ya tienes cuenta? Inicia sesión aquí"
                        style="-fx-background-color: transparent; -fx-border-color: #ffd666; -fx-border-width: 1.2;
                               -fx-text-fill: #ffd666; -fx-font-weight: bold; -fx-font-size: 13px;
                               -fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 8 18 8 18;"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>