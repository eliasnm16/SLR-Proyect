<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="607.0" prefWidth="620.0"
            style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlador.LoginUsuarioRegistradoControlador">

    <center>
        <StackPane>
            <padding>
                <Insets top="28" right="28" bottom="28" left="28"/>
            </padding>

            <VBox maxWidth="480" spacing="16"
                  style="-fx-background-color: #0b0b0b; -fx-background-radius: 18;
                         -fx-border-color: #3b3320; -fx-border-width: 1.2; -fx-border-radius: 18;">
                <padding>
                    <Insets top="22" right="22" bottom="22" left="22"/>
                </padding>

                <ImageView fitHeight="76" fitWidth="76" preserveRatio="true">
                    <image><Image url="@logo.jpg"/></image>
                </ImageView>

                <Text fill="WHITE" text="Bienvenido">
                    <font><Font size="22"/></font>
                </Text>

                <Text fill="#b5b5b5" text="Ingrese sus datos para acceder"/>
        <Text fill="WHITE" layoutX="261.0" layoutY="114.0" text="Bienvenido" />
        <Text fill="#c4c4c2" layoutX="210.0" layoutY="138.0" text="Ingrese sus datos para acceder" />
        <Text fill="WHITE" layoutX="185.0" layoutY="179.0" text="Email" />
        <Text fill="WHITE" layoutX="185.0" layoutY="241.0" text="Contraseña" />

        <!-- EMAIL -->
        <TextField fx:id="txtEmail" layoutX="185.0" layoutY="183.0" prefHeight="26.0" prefWidth="222.0" style="-fx-background-color: grey; -fx-border-color: #fcdb00;" />
        <Label fx:id="lblErrorEmail" layoutX="185.0" layoutY="212.0" prefHeight="18.0" prefWidth="222.0" style="-fx-font-size: 11px; -fx-padding: 2 0 0 0;" text="✗ El email no puede estar vacío" textFill="RED" visible="false" />

        <!-- CONTRASEÑA -->
        <PasswordField fx:id="txtPassword" layoutX="185.0" layoutY="247.0" prefHeight="26.0" prefWidth="222.0" style="-fx-background-color: grey; -fx-border-color: #fcdb00;" />
        <Label fx:id="lblErrorPassword" layoutX="185.0" layoutY="276.0" prefHeight="18.0" prefWidth="222.0" style="-fx-font-size: 11px; -fx-padding: 2 0 0 0;" text="✗ La contraseña no puede estar vacía" textFill="RED" visible="false" />

        <!-- BOTÓN ACCEDER -->
        <Button layoutX="203.0" layoutY="318.0" mnemonicParsing="false" onAction="#onAcceder" prefHeight="32.0" prefWidth="186.0" style="-fx-background-color: grey; -fx-border-color: #fcdb00; -fx-text-fill: black;" text="Acceder" wrapText="true" />

                <GridPane hgap="12" vgap="10">
                    <Text fill="WHITE" text="Email" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtEmail" promptText="correo@ejemplo.com"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"
                               style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                      -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                      -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                    <Text fill="WHITE" text="Contraseña" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="txtPassword" promptText="••••••••"
                                   GridPane.rowIndex="3" GridPane.columnIndex="0"
                                   style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                          -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                          -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>
                </GridPane>

                <Button fx:id="btnAcceder" mnemonicParsing="false" onAction="#onAcceder" text="Acceder"
                        style="-fx-background-color: #ffd666; -fx-text-fill: #111111; -fx-font-weight: bold;
                               -fx-background-radius: 18; -fx-padding: 10 18 10 18;"/>

                <Button fx:id="btnRegistro" mnemonicParsing="false" onAction="#irARegistro"
                        text="Si es su primera vez, regístrese aquí."
                        style="-fx-background-color: transparent; -fx-border-color: #ffd666; -fx-border-width: 1.2;
                               -fx-text-fill: #ffd666; -fx-font-weight: bold;
                               -fx-background-radius: 18; -fx-border-radius: 18; -fx-padding: 10 18 10 18;"/>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
        <!-- BOTÓN REGISTRO -->
        <Button fx:id="btnRegistro" layoutX="206.0" layoutY="360.0" mnemonicParsing="false" onAction="#irARegistro" prefHeight="51.0" prefWidth="186.0" style="-fx-text-fill: white; -fx-background-color: black;" text="Si es su primera vez registrese aquí." textAlignment="CENTER" wrapText="true" />

        <!-- LOGO -->
        <ImageView fitHeight="78.0" fitWidth="73.0" layoutX="170.0" layoutY="51.0" preserveRatio="true">
            <image>
                <Image url="@logo.jpg" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
