<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="576.0" prefWidth="586.0"
            style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlador.PanelAdminControlador">

    <center>
        <StackPane>

            <ImageView fitWidth="700" fitHeight="700" preserveRatio="true" opacity="0.12">
                <image>
                    <Image url="@logo.jpg"/>
                </image>
            </ImageView>

            <VBox maxWidth="820" spacing="18"
                  style="-fx-background-color: rgba(11,11,11,0.65); -fx-background-radius: 18;
                         -fx-border-color: #3b3320; -fx-border-width: 1.2; -fx-border-radius: 18;">
                <padding>
                    <Insets top="18" right="18" bottom="18" left="18"/>
                </padding>

                <HBox spacing="14" style="-fx-alignment: center-left;">
                    <ImageView fitHeight="44" fitWidth="44" preserveRatio="true">
                        <image>
                            <Image url="@logo.jpg"/>
                        </image>
                    </ImageView>

                    <Text fill="#ffd666" text="Panel de administración">
                        <font><Font size="22"/></font>
                    </Text>

                    <Pane HBox.hgrow="ALWAYS"/>

                    <ComboBox fx:id="comboAdmin"
                              promptText="Admin"
                              prefWidth="140.0"
                              onAction="#logout"
                              style="-fx-background-color: #111111;
                                     -fx-text-fill: #ffd666;
                                     -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                     -fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 6 10 6 10;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Logout"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>

                <Text fill="#b5b5b5" text="Accesos rápidos">
                    <font><Font size="12"/></font>
                </Text>

                <GridPane alignment="CENTER" hgap="22" vgap="22" style="-fx-padding: 10 0 0 0;">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                        <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
                    </rowConstraints>

                    <Button fx:id="btnAlquiler" text="ALQUILER" onAction="#irAAlquileres"
                            GridPane.rowIndex="0" GridPane.columnIndex="0"
                            style="-fx-pref-width: 190; -fx-pref-height: 190;
                                   -fx-background-color: transparent;
                                   -fx-border-color: #ffd666; -fx-border-width: 2;
                                   -fx-border-radius: 18; -fx-background-radius: 18;
                                   -fx-text-fill: #ffd666; -fx-font-weight: bold; -fx-font-size: 16px;
                                   -fx-cursor: hand;"/>

                    <Button fx:id="btnUsuarios" text="USUARIOS" onAction="#irAUsuarios"
                            GridPane.rowIndex="0" GridPane.columnIndex="1"
                            style="-fx-pref-width: 190; -fx-pref-height: 190;
                                   -fx-background-color: transparent;
                                   -fx-border-color: #ffd666; -fx-border-width: 2;
                                   -fx-border-radius: 18; -fx-background-radius: 18;
                                   -fx-text-fill: #ffd666; -fx-font-weight: bold; -fx-font-size: 16px;
                                   -fx-cursor: hand;"/>

                    <Button fx:id="btnChofer" text="CHÓFER" onAction="#irAChofer"
                            GridPane.rowIndex="1" GridPane.columnIndex="0"
                            style="-fx-pref-width: 190; -fx-pref-height: 190;
                                   -fx-background-color: transparent;
                                   -fx-border-color: #ffd666; -fx-border-width: 2;
                                   -fx-border-radius: 18; -fx-background-radius: 18;
                                   -fx-text-fill: #ffd666; -fx-font-weight: bold; -fx-font-size: 16px;
                                   -fx-cursor: hand;"/>

                    <Button fx:id="btnCoches" text="COCHES" onAction="#irACoches"
                            GridPane.rowIndex="1" GridPane.columnIndex="1"
                            style="-fx-pref-width: 190; -fx-pref-height: 190;
                                   -fx-background-color: transparent;
                                   -fx-border-color: #ffd666; -fx-border-width: 2;
                                   -fx-border-radius: 18; -fx-background-radius: 18;
                                   -fx-text-fill: #ffd666; -fx-font-weight: bold; -fx-font-size: 16px;
                                   -fx-cursor: hand;"/>
                </GridPane>

            </VBox>

        </StackPane>
    </center>
</BorderPane>
