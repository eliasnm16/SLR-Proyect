<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="607.0" prefWidth="788.0"
            style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlador.AñadirCocheControlador">

    <top>
        <HBox style="-fx-background-color: #0b0b0b; -fx-border-color: #3b3320; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="14" right="16" bottom="14" left="16"/>
            </padding>

            <VBox spacing="2">
                <Text fill="#ffd666" text="Seville Luxury Renting">
                    <font>
                        <Font size="14"/>
                    </font>
                </Text>
                <Text fill="#b5b5b5" text="Alta de vehículo">
                    <font>
                        <Font size="11"/>
                    </font>
                </Text>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                    style="-fx-background-color: transparent;">
            <content>
                <StackPane>
                    <padding>
                        <Insets top="18" right="18" bottom="18" left="18"/>
                    </padding>

                    <VBox maxWidth="1000" spacing="16"
                          style="-fx-background-color: #0b0b0b; -fx-background-radius: 18;
                                 -fx-border-color: #3b3320; -fx-border-width: 1.2; -fx-border-radius: 18;">
                        <padding>
                            <Insets top="18" right="18" bottom="18" left="18"/>
                        </padding>

                        <Text fill="WHITE" text="Ingrese datos para añadir coche">
                            <font>
                                <Font size="18"/>
                            </font>
                        </Text>

                        <HBox spacing="18">
                            <CheckBox fx:id="chkNuevo" text="Nuevo" textFill="WHITE"/>
                            <CheckBox fx:id="chkDisponible" text="Disponible" textFill="WHITE"/>
                        </HBox>

                        <GridPane hgap="14" vgap="10">
                           
                            <Text fill="WHITE" text="Nº Bastidor" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtBastidor" promptText="Bastidor"
                                       GridPane.rowIndex="1" GridPane.columnIndex="0"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                            <Text fill="WHITE" text="Marca" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtMarca" promptText="Marca"
                                       GridPane.rowIndex="3" GridPane.columnIndex="0"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                            <Text fill="WHITE" text="Modelo" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtModelo" promptText="Modelo"
                                       GridPane.rowIndex="5" GridPane.columnIndex="0"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                            <Text fill="WHITE" text="Matrícula" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtMatricula" promptText="Matrícula"
                                       GridPane.rowIndex="7" GridPane.columnIndex="0"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                            <Text fill="WHITE" text="Precio diario" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtPrecioDiario" promptText="0"
                                       GridPane.rowIndex="9" GridPane.columnIndex="0"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                            
                            <Text fill="WHITE" text="Descripción" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                            <TextField fx:id="txtDescripcion" promptText="Descripción"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                            <Text fill="WHITE" text="Plazas" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            <TextField fx:id="txtPlazas" promptText="0"
                                       GridPane.rowIndex="3" GridPane.columnIndex="1"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                            <Text fill="WHITE" text="Potencia" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                            <TextField fx:id="txtPotencia" promptText="CV"
                                       GridPane.rowIndex="5" GridPane.columnIndex="1"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                            <Text fill="WHITE" text="Motor" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                            <TextField fx:id="txtMotor" promptText="Motor"
                                       GridPane.rowIndex="7" GridPane.columnIndex="1"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                            <Text fill="WHITE" text="V. Máx" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
                            <TextField fx:id="txtVelocidadMax" promptText="km/h"
                                       GridPane.rowIndex="9" GridPane.columnIndex="1"
                                       style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                              -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                              -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>
                        </GridPane>

                        <Text fill="WHITE" text="URL Imagen"/>
                        <TextField fx:id="txtImagenURL" promptText="ruta/imagen.jpg"
                                   style="-fx-background-color: #111111; -fx-text-fill: #f5f5f5;
                                          -fx-prompt-text-fill: #777777; -fx-border-color: #3b3320; -fx-border-width: 1.2;
                                          -fx-background-radius: 16; -fx-border-radius: 16; -fx-padding: 10 14 10 14;"/>

                        <HBox spacing="12">
                            <Button fx:id="btnRegistrar" mnemonicParsing="false" onAction="#registrarCoche" text="Registrar"
                                    style="-fx-background-color: #ffd666; -fx-text-fill: #111111; -fx-font-weight: bold;
                                           -fx-background-radius: 18; -fx-padding: 10 18 10 18;"/>
                            <Button fx:id="btnSalir" mnemonicParsing="false" onAction="#salir" text="Salir"
                                    style="-fx-background-color: transparent; -fx-border-color: #ffd666; -fx-border-width: 1.2;
                                           -fx-text-fill: #ffd666; -fx-font-weight: bold;
                                           -fx-background-radius: 18; -fx-border-radius: 18; -fx-padding: 10 18 10 18;"/>
                        </HBox>

                    </VBox>
                </StackPane>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
